#!/bin/bash
set -e

. /usr/local/bin/common

echo "Installing CBA A3"

curl -Lj https://github.com/CBATeam/CBA_A3/releases/download/v3.5.0.171204/CBA_A3_v3.5.0.zip -o CBA_A3_v3.5.0.zip 
unzip CBA_A3_v3.5.0.zip 
pushd \@CBA_A3
rm -f *.md
mv keys/cba_3.5.0.171204.bikey /opt/arma3/keys/cba.key
rmdir keys
find . -depth -exec rename 's/(.*)\/([^\/]*)/$1\/\L$2/' {} \;
popd
chmod -R 755 @CBA_A3 && mv @CBA_A3 /opt/arma3/@CBA_A3
rm -f CBA_A3_v3.5.0.zip